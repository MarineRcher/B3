@model IEnumerable<Teacher>
    @{
    var userRole = ViewBag.UserRole;
}
    <h2>Liste des professeurs</h2>
            @if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
    <table class="table table-striped table-hover mt-4">
        <thead class="table-primary">
            <tr>
                <th>Prenom</th>
                <th>Nom de famille</th>
                <th>Âge</th>
                <th>Spécialité</th>
                <th>Date d'admission</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model) {
            <tr>
                <td>@teacher.Firstname</td>
                <td>@teacher.Lastname</td>
                <td>@teacher.Age</td>
                <td>@teacher.Major</td>
                <td>@teacher.AdmissionDate</td>
                <td>
                    <a asp-controller="Teacher" asp-action="ShowDetails" asp-route-id="@teacher.Id" class="btn btn-info btn-sm me-2">Détails</a
                    >
                     @if (User.Identity.IsAuthenticated && @userRole == "Teacher"){
                    
                    <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning btn-sm">Modifier</a
                    >
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
    </Teacher>
