@model Event
@{
    var userRole = ViewBag.UserRole;
}
<h2>Détails de l'événement</h2>

<dl class="row">
    <dt class="col-sm-3 fw-bold text-primary">Nom</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-3 fw-bold text-primary">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-3 fw-bold text-primary">Date de l'événement</dt>
    <dd class="col-sm-10">@Model.EventDate</dd>

    <dt class="col-sm-3 fw-bold text-primary">Maximum de participants</dt>
    <dd class="col-sm-10">@Model.MaxParticipants</dd>

    <dt class="col-sm-3 fw-bold text-primary">Lieu</dt>
    <dd class="col-sm-10">@Model.Location</dd>

     <dt class="col-sm-3 fw-bold text-primary">Crée le</dt>
    <dd class="col-sm-10">@Model.CreatedAt</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Retour à la Liste</a>
@if (User.Identity.IsAuthenticated && userRole == "Teacher"){
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Supprimer</a>
}