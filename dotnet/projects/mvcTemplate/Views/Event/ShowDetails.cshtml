@model Event
@{
    var userRole = ViewBag.UserRole;
}
<h2>Détails de l'événement</h2>

<dl class="row">
    <dt class="col-sm-2">Nom</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Date de l'événement</dt>
    <dd class="col-sm-10">@Model.EventDate</dd>

    <dt class="col-sm-2">Maximum de participants</dt>
    <dd class="col-sm-10">@Model.MaxParticipants</dd>

    <dt class="col-sm-2">Lieu</dt>
    <dd class="col-sm-10">@Model.Location</dd>

     <dt class="col-sm-2">Crée le</dt>
    <dd class="col-sm-10">@Model.CreatedAt</dd>
</dl>

<a asp-action="Index">Retour à la Liste</a>
@if (User.Identity.IsAuthenticated && userRole == "Teacher"){
<a asp-action="Delete" asp-route-id="@Model.Id">Supprimer</a>
}