@model Teacher
@{
    var userRole = ViewBag.UserRole;
}
<h2>Détails du professeur</h2>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Prenom</dt>
    <dd class="col-sm-10">@Model.Firstname</dd>

    <dt class="col-sm-2">Nom de famille</dt>
    <dd class="col-sm-10">@Model.Lastname</dd>

    <dt class="col-sm-2">Âge</dt>
    <dd class="col-sm-10">@Model.Age</dd>

    <dt class="col-sm-2">Date d'admission</dt>
    <dd class="col-sm-10">@Model.AdmissionDate</dd>

    <dt class="col-sm-2">Spécialité</dt>
    <dd class="col-sm-10">@Model.Major</dd>
</dl>

<a asp-action="Index">Retour à la Liste</a>
@if (User.Identity.IsAuthenticated && @userRole == "Teacher"){
<a asp-action="Delete" asp-route-id="@Model.Id">Supprimer</a>
}