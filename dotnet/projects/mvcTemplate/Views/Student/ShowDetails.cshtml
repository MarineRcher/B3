@model Student
@{
    var userRole = ViewBag.UserRole;
}

<h2>Détails de l'Étudiant</h2>

<dl class="row">

    <dt class="col-sm-3 fw-bold text-primary">Prenom</dt>
    <dd class="col-sm-10">@Model.Firstname</dd>

    <dt class="col-sm-3 fw-bold text-primary">Nom de famille</dt>
    <dd class="col-sm-10">@Model.Lastname</dd>

    <dt class="col-sm-3 fw-bold text-primary">Âge</dt>
    <dd class="col-sm-10">@Model.Age</dd>

    <dt class="col-sm-3 fw-bold text-primary">Âge</dt>
    <dd class="col-sm-10">@Model.AdmissionDate</dd>

    <dt class="col-sm-3 fw-bold text-primary">Moyenne</dt>
    <dd class="col-sm-10">@Model.GPA</dd>

    <dt class="col-sm-3 fw-bold text-primary">Spécialité</dt>
    <dd class="col-sm-10">@Model.Major</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Retour à la Liste</a>
@if (User.Identity.IsAuthenticated && @userRole == "Teacher"){
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Supprimer</a>
}