@model IEnumerable<Student>
@{
    var userRole = ViewBag.UserRole;
}

@if (TempData["SuccessMessage"] != null)
{

    <div class="text-center">
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    </div>
}
<div class="text-center">
    <h2>Liste des Étudiants</h2>
</div>
    <table class="table table-striped table-hover mt-4">
        <thead class="table-primary">
            <tr>
                <th>Prenom</th>
                <th>Nom de famille</th>
                <th>Âge</th>
                <th>Spécialité</th>
                <th>Date d'admission</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model) {
            <tr>
                <td>@student.Firstname</td>
                <td>@student.Lastname</td>
                <td>@student.Age</td>
                <td>@student.Major</td>
                <td>@student.AdmissionDate</td>
                <td>
                    <a asp-controller="Student" asp-action="ShowDetails" asp-route-id="@student.Id" class="btn btn-info btn-sm me-2"><i class="bi bi-eye"> Détails</a
                    >
                     @if (User.Identity.IsAuthenticated && @userRole == "Teacher"){
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i> Modifier</a
                    >
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
    </Student>
